# Docker Environment Configuration
# Copy this to .env when running with Docker

# Database - Use your existing cloud PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://your_user:your_password@your_host:5432/portfoliomanager

# API
API_PORT=8000

# Azure AI Foundry (Required)
AZURE_FOUNDRY_ENDPOINT=your_azure_endpoint_here
AZURE_FOUNDRY_API_KEY=your_azure_api_key_here
AZURE_FOUNDRY_MODEL_NAME=gpt-4o-mini
AZURE_FOUNDRY_API_VERSION=2024-05-01-preview

# EOD Historical Data (Required)
EOD_API_TOKEN=your_eod_api_token_here
EOD_API_BASE_URL=https://eodhd.com/api

# Application
DEBUG=False
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
